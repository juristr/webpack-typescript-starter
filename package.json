{
	"name": "webpack-typescript-starter",
	"version": "0.0.1",
	"description": "A simple Webpack 5 starter with TypeScript transpilation",
	"main": "index.js",
	"scripts": {
		"start": "webpack serve --port 9000",
		"build": "webpack --config webpack.config.js --mode development",
		"build.prod": "webpack --config webpack.config.js --mode production",
		"build.esnext": "npm run build:types && npm run build:js",
		"build:types": "tsc --emitDeclarationOnly",
		"build:js": "babel src --out-dir dist --extensions \".ts\" --source-maps inline",
		"build.all": "npm run build.prod && npm run build.esnext",
		"test": "karma start karma.config.js"
	},
	"keywords": [
		"webpack",
		"webpack5",
		"typescript"
	],
	"author": "Juri Strumpflohner",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.4.0",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.4.0",
		"@babel/preset-env": "^7.4.1",
		"@babel/preset-typescript": "^7.3.3",
		"@types/jasmine": "2.8.7",
		"@types/node": "7.0.0",
		"html-webpack-plugin": "^4.5.0",
		"jasmine-core": "3.1.0",
		"karma": "^5.2.3",
		"karma-chrome-launcher": "^3.1.0",
		"karma-jasmine": "^4.0.1",
		"karma-webpack": "^5.0.0-alpha.5",
		"source-map-loader": "0.2.3",
		"ts-loader": "^8.0.12",
		"tslint": "5.17.0",
		"tslint-loader": "3.6.0",
		"typescript": "^4.1.3",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0",
		"webpack-dev-server": "^4.0.0-beta.0"
	}
}
