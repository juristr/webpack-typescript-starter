{
  "name": "webpack-typescript-starter",
  "version": "0.0.1",
  "description": "A simple Webpack 2 starter with TypeScript transpilation",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --port 9000 --inline --progress --profile --colors --watch --content-base src/",
    "build": "webpack --config webpack.config.js",
    "build.prod": "webpack --config webpack.config.js -p",
    "test": "karma start karma.config.js",
    "test:coverage": "remap-istanbul -i coverage/coverage-final.json -o coverage/html-report -t html"
  },
  "keywords": [
    "webpack",
    "webpack2",
    "typescript"
  ],  
  "author": "Juri Strumpflohner",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "2.5.40",
    "@types/node": "7.0.0",
    "awesome-typescript-loader": "3.0.0-beta.18",
    "istanbul-instrumenter-loader": "^1.2.0",
    "jasmine-core": "2.5.2",
    "karma": "1.4.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "1.1.0",
    "karma-phantomjs-launcher": "1.0.2",
    "karma-webpack": "2.0.1",
    "remap-istanbul": "^0.8.4",
    "source-map-loader": "0.1.6",
    "tslint": "4.3.1",
    "tslint-loader": "3.3.0",
    "typescript": "2.1.5",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0"
  }
}
